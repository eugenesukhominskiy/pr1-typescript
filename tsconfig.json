{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node"
  },
  "include": ["src/app.ts"],
  "exclude": ["node_modules", "dist", "src/index.ts"]
}
